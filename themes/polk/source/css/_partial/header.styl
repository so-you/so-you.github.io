.header {
  margin-bottom: 2em;
  padding: 0 20px;

  .blog-title {
    font-size: 2.5em;
    text-align: center;
    padding-top: 0.5em;
    color: #000000;
  }

  .subtitle {
    font-size: 15px;
    font-style: italic;
    color: #000000;
  }

  .menu {
    margin: 0;
    padding: 0;
    border-top: 1px solid #ccc;
    margin-top: 20px;

    .menu-item {
      margin: 0 15px 0 0;
      padding: 3px 0 3px 0;
      float: left;
      display: inline-block;
      font-weight: bold;
    }

    .menu-item-link {
      color: #888;

      &:hover {
        color: #000;
      }
    }
  }
}